@model WeatherAggregator.Library.Entities.WeatherInfo
@{
    ViewData["Title"] = "Home Page";
    var items = ViewBag.Items as List<LocationModel>;
    var selected = ViewBag.SelectedLocation as string;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div style="display: flex;">
        <!-- Sidebar -->
        <div style="width: 200px; background-color: #f0f0f0; padding: 10px;">
            <form asp-action="AddItem" method="post" style="margin-bottom: 10px;">
                <input type="text" name="newItem" placeholder="Neuer Eintrag" />
                <button type="submit">Hinzufügen</button>
            </form>

            <ul>
                @foreach (var item in items)
                {
                    <form method="post" asp-controller="Home" asp-action="getWeatherInfo" style="display:inline;">
                        <input type="hidden" name="locationName" value="@item.Name" />
                        <button type="submit">@item.Name</button>
                    </form>
                }
            </ul>
        </div>

        <!-- Hauptbereich -->
        <div style="margin-left: 20px;">
            <h2>Weather</h2>
            <p>Choose a location.</p>
        </div>
    </div>

    @if (Model?.Temperature != null)
    {
        <ul>

                <li> @Model.Temperature °C</li>
        </ul>
    }
    else
    {
        <p>No weather data loaded yet.</p>
    }
</div>
