@model List<WeatherAggregator.ASPNet.Models.LocationModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div style="display: flex;">
        <!-- Sidebar -->
        @foreach (var location in Model)
        {
            <form asp-action="GetWeatherInfo" method="post">
                <input type="hidden" name="Name" value="@location.Name" />
                <input type="hidden" name="Latitude" value="@location.Latitude" />
                <input type="hidden" name="Longitude" value="@location.Longitude" />
                <button type="submit">@location.Name</button>
            </form>
        }

        <!-- Hauptbereich -->
        <div style="margin-left: 20px;">
            <h2>Weather</h2>
            @foreach (var location in Model)
            {
                <div class="weather-block">
                    <h3>@location.Name</h3>

                    @if (location.WeatherModels.Any())
                    {
                        var latest = location.WeatherModels.Last();
                        <p>Temperatur: @latest.Temperature&nbsp;°C</p>
                        <p>Abgerufen um: @latest.DateTime.ToString("HH:mm:ss")</p>
                    }
                    else
                    {
                        <p>Keine Wetterdaten verfügbar.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>
